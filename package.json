{
  "name": "creditcard.js",
  "version": "0.1.0",
  "description": "A tool for Credit Card validation",
  "main": "creditcard.js",
  "private": true,
  "scripts": {
    "build": "npm run lint && npm run test && npm run build:debug && npm run build:min",
    "build:debug": "browserify src/creditCard.js -s CreditCard -t [babelify --loose all] -p [bannerify --file .banner ] -o dist/creditcard.js",
    "build:min": "uglifyjs dist/creditcard.js --comments '/!/' -m screw_ie8=true -c screw_ie8=true,unused=false -o dist/creditcard.min.js",
    "build:watch": "watchify src/creditCard.js -s CreditCard -t [babelify --loose all] -o dist/creditcard.js -v",
    "test": "karma start --single-run",
    "test:watch": "karma start --watch",
    "lint": "eslint src specs"
  },
  "keywords": [
    "credit",
    "credit card",
    "money"
  ],
  "author": "@fernahh",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.29",
    "babel-cli": "^6.4.5",
    "babelify": "^6.3.0",
    "bannerify": "^1.0.1",
    "browserify": "^13.0.0",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-standard": "^1.3.1",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.19",
    "karma-browserify": "^4.4.2",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.3",
    "phantomjs": "^1.9.19",
    "uglify-js": "^2.4.24",
    "watchify": "^3.4.0"
  }
}
